<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
                                                   xmlns:app="http://schemas.android.com/apk/res-auto"
                                                   xmlns:tools="http://schemas.android.com/tools"
                                                   android:layout_width="match_parent"
                                                   android:layout_height="match_parent"
                                                   tools:context="br.ufpe.cin.android.calculadora.MainActivity">

    <androidx.constraintlayout.widget.Guideline
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/guidelineHorizontalStart"
            android:orientation="horizontal"
            app:layout_constraintGuide_percent="0.02"/>

    <androidx.constraintlayout.widget.Guideline
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/guidelineVerticalStart"
            android:orientation="vertical"
            app:layout_constraintGuide_percent="0.04"/>

    <androidx.constraintlayout.widget.Guideline
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/guidelineVerticalEnd"
            android:orientation="vertical"
            app:layout_constraintGuide_percent="0.96"/>

    <TextView
            android:id="@+id/text_info"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:textSize="30sp"
            app:layout_constraintStart_toStartOf="@+id/guidelineVerticalStart"
            app:layout_constraintEnd_toStartOf="@+id/guidelineVerticalEnd"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintTop_toTopOf="@+id/guidelineHorizontalStart"
            android:layout_marginBottom="8dp"
            app:layout_constraintBottom_toTopOf="@+id/text_calc"
            app:layout_constraintVertical_chainStyle="packed"/>

    <EditText
            android:id="@+id/text_calc"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:enabled="false"
            android:gravity="bottom"
            android:inputType="numberDecimal"
            android:textSize="36sp"
            app:layout_constraintStart_toStartOf="@+id/guidelineVerticalStart"
            android:layout_marginEnd="8dp"
            app:layout_constraintEnd_toStartOf="@+id/btn_Backspace"
            android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@+id/text_info"
            app:layout_constraintHorizontal_chainStyle="spread"/>


    <Button
            android:id="@+id/btn_Backspace"
            style="@style/Widget.AppCompat.Button.Borderless"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="âŒ«"
            android:textSize="18sp"
            app:layout_constraintEnd_toStartOf="@+id/guidelineVerticalEnd"
            app:layout_constraintTop_toTopOf="@+id/text_calc"
            app:layout_constraintBottom_toBottomOf="@+id/text_calc"
            android:layout_marginTop="8dp"
            android:layout_marginBottom="8dp"
            app:layout_constraintStart_toEndOf="@+id/text_calc"
            android:layout_marginStart="8dp"/>

    <androidx.constraintlayout.widget.Barrier
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/barrier3"
            app:barrierDirection="bottom"
            tools:layout_editor_absoluteY="140dp"
            tools:layout_editor_absoluteX="30dp"
            app:constraint_referenced_ids="btn_Backspace,text_calc,text_info"/>

    <Button
            android:id="@+id/btn_7"
            style="@style/Widget.AppCompat.Button.Borderless"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="7"
            android:textSize="18sp"
            app:layout_constraintBottom_toTopOf="@+id/btn_4"
            app:layout_constraintVertical_chainStyle="packed"
            android:layout_marginTop="8dp"
            app:layout_constraintTop_toTopOf="@id/barrier3"
            app:layout_constraintVertical_bias="0.0"
            app:layout_constraintStart_toStartOf="@+id/guidelineVerticalStart"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintEnd_toStartOf="@+id/btn_8"
            app:layout_constraintHorizontal_chainStyle="packed"
            android:layout_marginStart="8dp"/>

    <Button
            android:id="@+id/btn_8"
            style="@style/Widget.AppCompat.Button.Borderless"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="8"
            android:textSize="18sp"
            app:layout_constraintBottom_toTopOf="@+id/btn_5"
            android:layout_marginTop="8dp"
            app:layout_constraintTop_toTopOf="@id/barrier3"
            app:layout_constraintVertical_chainStyle="packed"
            app:layout_constraintVertical_bias="0.0"
            app:layout_constraintStart_toEndOf="@+id/btn_7"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintEnd_toStartOf="@+id/btn_9"/>

    <Button
            android:id="@+id/btn_9"
            style="@style/Widget.AppCompat.Button.Borderless"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="9"
            android:textSize="18sp"
            app:layout_constraintBottom_toTopOf="@+id/btn_6"
            app:layout_constraintVertical_chainStyle="packed"
            android:layout_marginTop="8dp"
            app:layout_constraintTop_toTopOf="@id/barrier3"
            app:layout_constraintVertical_bias="0.0"
            app:layout_constraintStart_toEndOf="@+id/btn_8"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintEnd_toStartOf="@+id/btn_Divide"/>

    <Button
            android:id="@+id/btn_Divide"
            style="@style/Widget.AppCompat.Button.Borderless"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="/"
            android:textSize="18sp"
            app:layout_constraintBottom_toTopOf="@+id/btn_Multiply"
            android:layout_marginTop="8dp"
            app:layout_constraintTop_toTopOf="@id/barrier3"
            app:layout_constraintVertical_chainStyle="packed"
            app:layout_constraintVertical_bias="0.0"
            app:layout_constraintStart_toEndOf="@+id/btn_9"
            app:layout_constraintEnd_toStartOf="@+id/btn_Power"
            />


    <Button
            android:id="@+id/btn_4"
            style="@style/Widget.AppCompat.Button.Borderless"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="4"
            android:textSize="18sp"
            app:layout_constraintTop_toBottomOf="@+id/btn_7"
            app:layout_constraintBottom_toTopOf="@+id/btn_1"
            app:layout_constraintStart_toStartOf="@+id/guidelineVerticalStart"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintEnd_toStartOf="@+id/btn_5"
            app:layout_constraintHorizontal_chainStyle="packed"
            android:layout_marginStart="8dp"/>

    <Button
            android:id="@+id/btn_5"
            style="@style/Widget.AppCompat.Button.Borderless"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="5"
            android:textSize="18sp"
            app:layout_constraintTop_toBottomOf="@+id/btn_8"
            app:layout_constraintBottom_toTopOf="@+id/btn_2"
            app:layout_constraintStart_toEndOf="@+id/btn_4"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintEnd_toStartOf="@+id/btn_6"/>

    <Button
            android:id="@+id/btn_6"
            style="@style/Widget.AppCompat.Button.Borderless"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="6"
            android:textSize="18sp"
            app:layout_constraintTop_toBottomOf="@+id/btn_9"
            app:layout_constraintBottom_toTopOf="@+id/btn_3"
            app:layout_constraintStart_toEndOf="@+id/btn_5"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintEnd_toStartOf="@+id/btn_Multiply"/>

    <Button
            android:id="@+id/btn_Multiply"
            style="@style/Widget.AppCompat.Button.Borderless"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="*"
            android:textSize="18sp"
            app:layout_constraintTop_toBottomOf="@+id/btn_Divide"
            app:layout_constraintBottom_toTopOf="@+id/btn_Subtract"
            app:layout_constraintStart_toEndOf="@+id/btn_6"
            app:layout_constraintEnd_toStartOf="@+id/btn_LParen"
            />


    <Button
            android:id="@+id/btn_1"
            style="@style/Widget.AppCompat.Button.Borderless"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="1"
            android:textSize="18sp"
            app:layout_constraintTop_toBottomOf="@+id/btn_4"
            app:layout_constraintBottom_toTopOf="@+id/btn_Dot"
            app:layout_constraintStart_toStartOf="@+id/guidelineVerticalStart"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintEnd_toStartOf="@+id/btn_2"
            android:layout_marginStart="8dp"
            app:layout_constraintHorizontal_chainStyle="packed"/>

    <Button
            android:id="@+id/btn_2"
            style="@style/Widget.AppCompat.Button.Borderless"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="2"
            android:textSize="18sp"
            app:layout_constraintTop_toBottomOf="@+id/btn_5"
            app:layout_constraintBottom_toTopOf="@+id/btn_0"
            app:layout_constraintStart_toEndOf="@+id/btn_1"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintEnd_toStartOf="@+id/btn_3"/>

    <Button
            android:id="@+id/btn_3"
            style="@style/Widget.AppCompat.Button.Borderless"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="3"
            android:textSize="18sp"
            app:layout_constraintTop_toBottomOf="@+id/btn_6"
            app:layout_constraintBottom_toTopOf="@+id/btn_Equal"
            app:layout_constraintStart_toEndOf="@+id/btn_2"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintEnd_toStartOf="@+id/btn_Subtract"/>

    <Button
            android:id="@+id/btn_Subtract"
            style="@style/Widget.AppCompat.Button.Borderless"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="-"
            android:textSize="18sp"
            app:layout_constraintTop_toBottomOf="@+id/btn_Multiply"
            app:layout_constraintBottom_toTopOf="@+id/btn_Add"
            app:layout_constraintStart_toEndOf="@+id/btn_3"
            app:layout_constraintEnd_toStartOf="@+id/btn_RParen"
            />


    <Button
            android:id="@+id/btn_Dot"
            style="@style/Widget.AppCompat.Button.Borderless"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="."
            android:textSize="18sp"
            app:layout_constraintTop_toBottomOf="@+id/btn_1"
            app:layout_constraintStart_toStartOf="@+id/guidelineVerticalStart"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintEnd_toStartOf="@+id/btn_0"
            app:layout_constraintHorizontal_chainStyle="packed"
            android:layout_marginStart="8dp"
            android:layout_marginBottom="8dp"
            app:layout_constraintBottom_toBottomOf="parent"/>

    <Button
            android:id="@+id/btn_0"
            style="@style/Widget.AppCompat.Button.Borderless"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="0"
            android:textSize="18sp"
            app:layout_constraintTop_toBottomOf="@+id/btn_2"
            app:layout_constraintStart_toEndOf="@+id/btn_Dot"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintEnd_toStartOf="@+id/btn_Equal"
            android:layout_marginBottom="8dp"
            app:layout_constraintBottom_toBottomOf="parent"/>

    <Button
            android:id="@+id/btn_Equal"
            style="@style/Widget.AppCompat.Button.Borderless"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="="
            android:textSize="18sp"
            app:layout_constraintTop_toBottomOf="@+id/btn_3"
            app:layout_constraintStart_toEndOf="@+id/btn_0"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintEnd_toStartOf="@+id/btn_Add"
            android:layout_marginBottom="8dp"
            app:layout_constraintBottom_toBottomOf="parent"/>

    <Button
            android:id="@+id/btn_Add"
            style="@style/Widget.AppCompat.Button.Borderless"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="+"
            android:textSize="18sp"
            app:layout_constraintTop_toBottomOf="@+id/btn_Subtract"
            app:layout_constraintStart_toEndOf="@+id/btn_Equal"
            app:layout_constraintEnd_toStartOf="@+id/btn_Clear"
            android:layout_marginBottom="8dp"
            app:layout_constraintBottom_toBottomOf="parent"/>


    <Button
            android:id="@+id/btn_LParen"
            style="@style/Widget.AppCompat.Button.Borderless"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="("
            android:textSize="18sp"
            android:layout_marginEnd="8dp"
            app:layout_constraintEnd_toStartOf="@+id/guidelineVerticalEnd"
            app:layout_constraintTop_toBottomOf="@+id/btn_Power"
            app:layout_constraintBottom_toTopOf="@+id/btn_RParen"
            app:layout_constraintStart_toEndOf="@+id/btn_Multiply"
            />

    <Button
            android:id="@+id/btn_RParen"
            style="@style/Widget.AppCompat.Button.Borderless"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=")"
            android:textSize="18sp"
            android:layout_marginEnd="8dp"
            app:layout_constraintEnd_toStartOf="@+id/guidelineVerticalEnd"
            app:layout_constraintTop_toBottomOf="@+id/btn_LParen"
            app:layout_constraintBottom_toTopOf="@+id/btn_Clear"
            app:layout_constraintStart_toEndOf="@+id/btn_Subtract"
            />

    <Button
            android:id="@+id/btn_Power"
            style="@style/Widget.AppCompat.Button.Borderless"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="^"
            android:textSize="18sp"
            android:layout_marginEnd="8dp"
            app:layout_constraintEnd_toStartOf="@+id/guidelineVerticalEnd"
            app:layout_constraintTop_toBottomOf="@id/barrier3"
            app:layout_constraintBottom_toTopOf="@+id/btn_LParen"
            app:layout_constraintVertical_chainStyle="packed"
            app:layout_constraintVertical_bias="0.0"
            android:layout_marginTop="8dp"
            app:layout_constraintStart_toEndOf="@+id/btn_Divide"
            />

    <Button
            android:id="@+id/btn_Clear"
            style="@style/Widget.AppCompat.Button.Borderless"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="C"
            android:textSize="18sp"
            android:layout_marginEnd="8dp"
            app:layout_constraintEnd_toStartOf="@+id/guidelineVerticalEnd"
            android:layout_marginBottom="8dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/btn_RParen"
            app:layout_constraintStart_toEndOf="@+id/btn_Add"
            />

</androidx.constraintlayout.widget.ConstraintLayout>