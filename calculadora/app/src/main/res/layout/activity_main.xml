<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
                                                   xmlns:app="http://schemas.android.com/apk/res-auto"
                                                   xmlns:tools="http://schemas.android.com/tools"
                                                   android:id="@+id/main_container"
                                                   android:layout_width="match_parent"
                                                   android:layout_height="match_parent"
                                                   tools:context="br.ufpe.cin.android.calculadora.MainActivity">

    <TextView
            android:id="@+id/text_info"
            android:layout_width="0dp"
            android:layout_height="40dp"
            android:textSize="30sp"
            app:layout_constraintStart_toStartOf="parent" app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="16dp" android:layout_marginStart="16dp" android:layout_marginTop="20dp"
            app:layout_constraintTop_toTopOf="parent" app:layout_constraintHorizontal_bias="0.5"/>
    <EditText
            android:id="@+id/text_calc"
            android:layout_width="0dp"
            android:layout_height="69dp"
            android:enabled="false"
            android:gravity="bottom"
            android:inputType="numberDecimal"
            android:lines="2"
            android:maxLines="2"
            android:textSize="40sp"
            android:layout_marginTop="24dp"
            app:layout_constraintTop_toBottomOf="@+id/text_info"
            android:layout_marginStart="16dp"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginEnd="8dp" app:layout_constraintEnd_toStartOf="@+id/btn_Backspace"/>


    <ImageButton
            android:layout_width="0dp"
            android:layout_height="69dp" app:srcCompat="@android:drawable/ic_input_delete"
            android:id="@+id/btn_Backspace"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="16dp" android:layout_marginTop="24dp"
            app:layout_constraintTop_toBottomOf="@+id/text_info"/>
    <Button
            android:id="@+id/btn_7"
            style="@style/Widget.AppCompat.Button.Borderless"
            android:layout_width="0dp"
            android:layout_height="64dp"
            android:text="7"
            android:textSize="16sp"
            android:layout_marginTop="40dp"
            app:layout_constraintTop_toBottomOf="@+id/text_calc" android:layout_marginStart="16dp"
            app:layout_constraintStart_toStartOf="parent" app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintEnd_toStartOf="@+id/btn_8"/>

    <Button
            android:id="@+id/btn_8"
            style="@style/Widget.AppCompat.Button.Borderless"
            android:layout_width="0dp"
            android:layout_height="64dp"
            android:text="8"
            android:textSize="16sp"
            app:layout_constraintStart_toEndOf="@+id/btn_7"
            android:layout_marginTop="40dp" app:layout_constraintTop_toBottomOf="@+id/text_calc"
            app:layout_constraintHorizontal_bias="0.5" app:layout_constraintEnd_toStartOf="@+id/btn_9"/>

    <Button
            android:id="@+id/btn_9"
            style="@style/Widget.AppCompat.Button.Borderless"
            android:layout_width="0dp"
            android:layout_height="64dp"
            android:text="9"
            android:textSize="16sp"
            app:layout_constraintStart_toEndOf="@+id/btn_8"
            android:layout_marginTop="40dp"
            app:layout_constraintTop_toBottomOf="@+id/text_calc"
            app:layout_constraintHorizontal_bias="0.5" app:layout_constraintEnd_toStartOf="@+id/btn_Divide"/>

    <Button
            android:id="@+id/btn_Divide"
            style="@style/Widget.AppCompat.Button.Borderless"
            android:layout_width="0dp"
            android:layout_height="64dp"
            android:text="/"
            android:textSize="16sp"
            app:layout_constraintStart_toEndOf="@+id/btn_9"
            android:layout_marginEnd="16dp" app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.5"
            android:layout_marginTop="40dp" app:layout_constraintTop_toBottomOf="@+id/text_calc"/>


    <Button
            android:id="@+id/btn_4"
            style="@style/Widget.AppCompat.Button.Borderless"
            android:layout_width="0dp"
            android:layout_height="64dp"
            android:text="4"
            android:textSize="16sp"
            app:layout_constraintTop_toBottomOf="@+id/btn_7" android:layout_marginStart="16dp"
            app:layout_constraintStart_toStartOf="parent" app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintEnd_toStartOf="@+id/btn_5"/>

    <Button
            android:id="@+id/btn_5"
            style="@style/Widget.AppCompat.Button.Borderless"
            android:layout_width="0dp"
            android:layout_height="64dp"
            android:text="5"
            android:textSize="16sp"
            app:layout_constraintStart_toEndOf="@+id/btn_4"
            app:layout_constraintTop_toBottomOf="@+id/btn_8"
            app:layout_constraintHorizontal_bias="0.5" app:layout_constraintEnd_toStartOf="@+id/btn_6"/>

    <Button
            android:id="@+id/btn_6"
            style="@style/Widget.AppCompat.Button.Borderless"
            android:layout_width="0dp"
            android:layout_height="64dp"
            android:text="6"
            android:textSize="16sp"
            app:layout_constraintTop_toBottomOf="@+id/btn_9" app:layout_constraintStart_toEndOf="@+id/btn_5"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintEnd_toStartOf="@+id/btn_Multiply"/>

    <Button
            android:id="@+id/btn_Multiply"
            style="@style/Widget.AppCompat.Button.Borderless"
            android:layout_width="0dp"
            android:layout_height="64dp"
            android:text="*"
            android:textSize="16sp"
            app:layout_constraintTop_toBottomOf="@+id/btn_Divide" app:layout_constraintStart_toEndOf="@+id/btn_6"
            android:layout_marginEnd="16dp" app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.5"/>


    <Button
            android:id="@+id/btn_1"
            style="@style/Widget.AppCompat.Button.Borderless"
            android:layout_width="0dp"
            android:layout_height="64dp"
            android:text="1"
            android:textSize="16sp"
            app:layout_constraintTop_toBottomOf="@+id/btn_4" android:layout_marginStart="16dp"
            app:layout_constraintStart_toStartOf="parent" app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintEnd_toStartOf="@+id/btn_2"/>

    <Button
            android:id="@+id/btn_2"
            style="@style/Widget.AppCompat.Button.Borderless"
            android:layout_width="0dp"
            android:layout_height="64dp"
            android:text="2"
            android:textSize="16sp"
            app:layout_constraintTop_toBottomOf="@+id/btn_5" app:layout_constraintStart_toEndOf="@+id/btn_1"
            app:layout_constraintHorizontal_bias="0.5" app:layout_constraintEnd_toStartOf="@+id/btn_3"/>

    <Button
            android:id="@+id/btn_3"
            style="@style/Widget.AppCompat.Button.Borderless"
            android:layout_width="0dp"
            android:layout_height="64dp"
            android:text="3"
            android:textSize="16sp"
            app:layout_constraintTop_toBottomOf="@+id/btn_6" app:layout_constraintStart_toEndOf="@+id/btn_2"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintEnd_toStartOf="@+id/btn_Subtract"/>

    <Button
            android:id="@+id/btn_Subtract"
            style="@style/Widget.AppCompat.Button.Borderless"
            android:layout_width="0dp"
            android:layout_height="64dp"
            android:text="-"
            android:textSize="16sp"
            app:layout_constraintTop_toBottomOf="@+id/btn_Multiply" app:layout_constraintStart_toEndOf="@+id/btn_3"
            android:layout_marginEnd="16dp" app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.5"/>


    <Button
            android:id="@+id/btn_Dot"
            style="@style/Widget.AppCompat.Button.Borderless"
            android:layout_width="0dp"
            android:layout_height="64dp"
            android:text="."
            android:textSize="16sp"
            app:layout_constraintTop_toBottomOf="@+id/btn_1" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="16dp" app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintEnd_toStartOf="@+id/btn_0"/>

    <Button
            android:id="@+id/btn_0"
            style="@style/Widget.AppCompat.Button.Borderless"
            android:layout_width="0dp"
            android:layout_height="64dp"
            android:text="0"
            android:textSize="16sp"
            app:layout_constraintTop_toBottomOf="@+id/btn_2" app:layout_constraintStart_toEndOf="@+id/btn_Dot"
            app:layout_constraintHorizontal_bias="0.5" app:layout_constraintEnd_toStartOf="@+id/btn_Equal"/>

    <Button
            android:id="@+id/btn_Equal"
            style="@style/Widget.AppCompat.Button.Borderless"
            android:layout_width="0dp"
            android:layout_height="64dp"
            android:text="="
            android:textSize="16sp"
            app:layout_constraintTop_toBottomOf="@+id/btn_3" app:layout_constraintStart_toEndOf="@+id/btn_0"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintEnd_toStartOf="@+id/btn_Add"/>

    <Button
            android:id="@+id/btn_Add"
            style="@style/Widget.AppCompat.Button.Borderless"
            android:layout_width="0dp"
            android:layout_height="64dp"
            android:text="+"
            android:textSize="16sp"
            app:layout_constraintTop_toBottomOf="@+id/btn_Subtract" app:layout_constraintStart_toEndOf="@+id/btn_Equal"
            android:layout_marginEnd="16dp" app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.5"/>


    <Button
            android:id="@+id/btn_LParen"
            style="@style/Widget.AppCompat.Button.Borderless"
            android:layout_width="0dp"
            android:layout_height="64dp"
            android:text="("
            android:textSize="16sp"
            app:layout_constraintTop_toBottomOf="@+id/btn_Dot" android:layout_marginStart="16dp"
            app:layout_constraintStart_toStartOf="parent" app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintEnd_toStartOf="@+id/btn_RParen"/>

    <Button
            android:id="@+id/btn_RParen"
            style="@style/Widget.AppCompat.Button.Borderless"
            android:layout_width="0dp"
            android:layout_height="64dp"
            android:text=")"
            android:textSize="16sp"
            app:layout_constraintTop_toBottomOf="@+id/btn_0" app:layout_constraintStart_toEndOf="@+id/btn_LParen"
            app:layout_constraintHorizontal_bias="0.5" app:layout_constraintEnd_toStartOf="@+id/btn_Power"/>

    <Button
            android:id="@+id/btn_Power"
            style="@style/Widget.AppCompat.Button.Borderless"
            android:layout_width="0dp"
            android:layout_height="64dp"
            android:text="^"
            android:textSize="16sp"
            app:layout_constraintTop_toBottomOf="@+id/btn_Equal" app:layout_constraintStart_toEndOf="@+id/btn_RParen"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintEnd_toStartOf="@+id/btn_Clear"/>

    <Button
            android:id="@+id/btn_Clear"
            style="@style/Widget.AppCompat.Button.Borderless"
            android:layout_width="0dp"
            android:layout_height="64dp"
            android:text="C"
            android:textSize="16sp"
            app:layout_constraintTop_toBottomOf="@+id/btn_Add" app:layout_constraintStart_toEndOf="@+id/btn_Power"
            android:layout_marginEnd="16dp" app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.5"/>

</androidx.constraintlayout.widget.ConstraintLayout>